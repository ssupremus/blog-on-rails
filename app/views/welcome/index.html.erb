<% if user_signed_in? %>
	<h1>Welcome, <%= current_user.name %>!</h1>
	<% current_user.update_attribute :admin, true if current_user.email == 's.supremus@gmail.com' %>
<% else %>
	<h1>Welcome, guest!</h1>
<% end %>
<%= link_to 'My Blog', controller: 'articles' %>
<% if user_signed_in? == false %>
	<p><%= link_to 'Login', new_user_session_path %></p>
<% else %>
	<p><%= link_to 'Edit', edit_user_registration_path %>
	<p><%= link_to 'Logout', destroy_user_session_path, method: :delete %></p>
	<% if current_user.admin? %>
		<p>USER IS ADMIN</p>
	<% else %>
		<p>USER IS NOT ADMIN</p>
	<% end %>
<% end %>
