<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
<p>
	<% form.label 'Your name:' %><!--<br>-->
	<%= form.text_field :commenter, type: 'hidden' %>
</p>

<p>
	<%= form.label 'Your comment:' %><br>
	<%= form.text_area :body %>
</p>

<p>
	<%= form.submit 'Add a comment', class: "ass" %>
</p>
<% end %>
