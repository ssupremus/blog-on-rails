<%= form_with model: @article, local: true, html: { role: "form", class: "article-form" } do |form| %>
	<% if @article.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@article.errors.count, "error") %> prohibited this articles from being saved
			</h2>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
<div class="form-group">
		<%= form.label :title, class: "col-sm-2 control-label" %><br>
		<%= form.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
		<%= form.label :text, class: "col-sm-2 control-label" %><br>
		<%= form.text_area :text, class: "form-control" %>
</div>
<%= form.submit 'Submit', class: "btn btn-success" %>
<% end %>
